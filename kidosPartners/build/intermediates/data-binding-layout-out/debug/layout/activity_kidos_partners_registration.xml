
                                                  
                                          
    
                                                                                                                          
           

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context="com.example.kidospartners.KidosPartnersRegistration"
        android:orientation="vertical" android:tag="layout/activity_kidos_partners_registration_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout_registration">


     <EditText
                android:id="@+id/txt_first_name"
                android:paddingTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_1"                         
                android:singleLine="true"
                android:hint="First Name" />


        <EditText
            android:id="@+id/txt_last_name"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_2"                        
            android:singleLine="true"
            android:hint="Last Name" />
     
     <EditText
                android:id="@+id/txt_phno"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:tag="binding_3"                      
                android:hint="@string/hint_txt_phno"
                android:inputType="phone"/>
     
     <EditText
                android:id="@+id/txt_emailid"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:tag="binding_4"                       
                android:hint="@string/hint_emailid" />
     
      <EditText
                android:id="@+id/txt_password"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:tag="binding_5"                        
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

       <EditText
                android:id="@+id/txt_retypepass"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/hint_retypepass"
                android:inputType="textPassword" />
      
          <Button android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="@string/btn_register"
            android:background="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:onClick="Register"/>
       
     
        </LinearLayout>
             