<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
>

    <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
     
     >
    
              <TextView 
        android:id="@+id/label_days"
		android:layout_marginTop="20dp"
		android:layout_marginRight="20dp"
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="DAYS"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        />
      
       </LinearLayout>
    
 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
     
     >
        
     <ToggleButton  
        android:id="@+id/toggleMon"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/wktogglebtn" 
        android:textColor="@color/select_button_color"
        android:layout_marginLeft="20dp" 
        android:textSize="13sp"
        android:minHeight="0dp" 
        android:minWidth="0dp"
        android:text="Mon"  
        android:textOff="Mon"  
        android:textOn="Mon" />
         <ToggleButton  
        android:id="@+id/toggleTue"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:background="@drawable/wktogglebtn" 
        android:textColor="@color/select_button_color"
        android:layout_marginLeft="1dp" 
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Tue"  
        android:textOff="Tue"  
        android:textOn="Tue" />
      <ToggleButton  
        android:id="@+id/toggleWed"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/wktogglebtn"  
        android:textColor="@color/select_button_color"
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginLeft="1dp" 
        android:text="Wed"  
        android:textOff="Wed"  
        android:textOn="Wed" />
         <ToggleButton  
        android:id="@+id/toggleThu"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/wktogglebtn"  
        android:textColor="@color/select_button_color"
        android:layout_marginLeft="1dp" 
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Thu"  
        android:textOff="Thu"  
        android:textOn="Thu" />
      <ToggleButton  
        android:id="@+id/toggleFri"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:background="@drawable/wktogglebtn" 
        android:textColor="@color/select_button_color"  
        android:layout_marginLeft="1dp" 
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Fri"  
        android:textOff="Fri"  
        android:textOn="Fri" />
      <ToggleButton  
        android:id="@+id/toggleSat"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/wktogglebtn"  
        android:textColor="@color/select_button_color"
        android:layout_marginLeft="1dp" 
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Sat"  
        android:textOff="Sat"  
        android:textOn="Sat" />
         <ToggleButton  
        android:id="@+id/toggleSun"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/wktogglebtn"  
        android:textColor="@color/select_button_color"
        android:layout_marginLeft="1dp" 
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Sun"  
        android:textOff="Sun"  
        android:textOn="Sun" />
 	 </LinearLayout>
 	 
 	 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >
      <TextView 
        android:id="@+id/label_fromtime"
		android:layout_marginTop="10dp"
		
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="FROM"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        />
 	 <TimePicker
        android:id="@+id/fromTimePicker"
        android:scaleY="0.8" 
		android:scaleX="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        />
	</LinearLayout>

 	<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >
 	 <TextView 
        android:id="@+id/label_totime"
		android:layout_marginTop="10dp"
		
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="TO"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        />	 
 	 <TimePicker
        android:id="@+id/toTimePicker"
        android:scaleY="0.8" 
		android:scaleX="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        />
 	</LinearLayout>
 	
 	
 	<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center_horizontal"
     
     >
 	 <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
 	    <Button  
        android:id="@+id/btn_addbatch"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/standardbutton"  
        android:textColor="#FFFFFF"
        
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Add" 
         android:layout_weight="1" 
         />
 	    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
 	    <Button  
        android:id="@+id/btn_cancel"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:background="@drawable/standardbutton"  
        android:textColor="#FFFFFF"
         
        android:textSize="13sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Cancel"
         android:layout_weight="1"  
         />
 	    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
 	    
 	 </LinearLayout>
 	
    
</LinearLayout>